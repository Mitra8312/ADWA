
<form id="Form" class="form row">
	<div class="form__container col-8">
		<label class="form__label form-floating mb-3">
			<input class="form__input" type="text" class="form-control" id="GivenName" required>
			<span>Имя пользователя</span>
		</label>
		<label class="form__label form-floating mb-3">
			<input class="form__input" type="text" class="form-control" id="Surname" required>
			<span>Фамилия пользователя</span>
		</label>
		<label class="form__label form-floating mb-3">
			<input class="form__input" type="text" class="form-control" id="SamAccountName" required>
			<span>Логин пользователя</span>
		</label>
		<label class="form__label form-floating mb-3">
			<input class="form__input" type="password" class="form-control" id="Password" required>
			<span>Пароль пользователя</span>
		</label>

		<button type="sumbit" id="addNewUser" class="form__submit btn btn-success">Добавить пользователя</button>

	</div>

	<div class="form__radios col-4">

			@foreach (var i in Model)
			{
				<label class="form__radio list-group-item">
					<input class="form__radioInput" type="radio" name="ou" value="@i.GetOUPath()" required/>
						<span class="form__radioDesc">@i.GetName()</span>
				</label>
			}
	</div>
</form>